    <style>
      body {
        margin: 0;
        padding: 0;
        background-color: #2c2c2c;
        color: #f5f5f5;
        font-family: 'Arial', sans-serif;
      }
  
      nav {
        display: flex;
        align-items: center;
        background-color: #ff6347;
        padding: 1em;
        box-sizing: border-box;
        width: 100%;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
  
      nav h1 {
        margin: 0;
      }
  
      nav .Hello {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
      }
  
      nav .Hello ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
      }
  
      nav .Hello ul li {
        margin: 0 10px;
        padding: 10px 15px;
        font-size: 18px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
        border-radius: 5px;
      }
  
      nav .Hello ul li:hover {
        background-color: #fff;
        color: #ff6347;
      }
  
      ul.movies {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        padding: 20px;
        list-style: none;
        margin: 0;
      }
  
      ul.movies li {
        margin: 10px;
        border: none;
      }
  
      ul.movies li a {
        display: block;
        overflow: hidden;
        border-radius: 10px;
        transition: transform 0.3s, box-shadow 0.3s;
        border: 2px solid #ff6347;
      }
  
      ul.movies li a:hover {
        transform: scale(1.05);
        box-shadow: 0 5px 15px rgba(0,0,0,0.3);
      }
  
      ul.movies li img {
        width: 200px;
        height: 300px;
        object-fit: cover;
        display: block;
      }
    </style>
</head>
